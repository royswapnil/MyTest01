@{
    ViewData["Title"] = "";
    var msg = "";
    if (ViewData["Message"] != null)
    {
        msg = ViewData["Message"].ToString();
    }
    Layout = "_LayoutBlank";

}

<style>
    .center-block {
        display: block;
        margin-right: auto;
        margin-left: auto;
    }

    .aligncenter {
        padding-left: 14%;
        padding-right: 14%;
    }


    .abtn:hover {
        color: #fff !important;
    }
</style>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div class="row">
        <div class="form-horizontal">
            <div class="col-md-4 col-md-offset-4">
                <div class="form-group">
                    <div class="col-md-12 text-center">
                        <img src="~/images/activeimg.png" class="img-responsive center-block" alt="Responsive image">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 text-center">
                        <h2 class="sign-in">Log in</h2>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 aligncenter">
                        @if (msg.ToString() != "")
                        {
                            <p style="color:red">@msg</p>

                        }
                        @Html.TextBox("txtUserName", "", new { @class = "form-control", @placeholder = "Username" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 aligncenter">
                        @Html.Password("txtPassword", "", new { @class = "form-control", @placeholder = "Password" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 aligncenter">
                        <input type="submit" value="Sign in" class="btn btn-primary form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            window.history.pushState(null, "", window.location.href);
            window.onpopstate = function () {
                window.history.pushState(null, "", window.location.href);
            };
            $('#navhead').hide();
        });

    </script>
}